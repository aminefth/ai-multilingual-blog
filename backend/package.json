{
  "name": "ai-tools-blog-backend",
  "version": "1.0.0",
  "description": "Backend for a production-ready multilingual blog platform for AI tools reviews and monetization",
  "main": "src/index.js",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "pm2 start ecosystem.config.js --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "jest --config ./tests/config/jest.config.js",
    "test:unit": "jest --config ./tests/config/jest.unit.js",
    "test:integration": "jest --config ./tests/config/jest.integration.js",
    "test:e2e": "jest --config ./tests/config/jest.e2e.js",
    "test:watch": "jest --config ./tests/config/jest.config.js --watch",
    "coverage": "jest --config ./tests/config/jest.config.js --coverage",
    "coverage:coveralls": "jest --config ./tests/config/jest.config.js --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "seed": "node src/scripts/seedDatabase.js",
    "build": "echo 'Backend build step'",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up"
  },
  "keywords": [
    "blog",
    "ai-tools",
    "multilingual",
    "monetization",
    "affiliate",
    "express",
    "rest",
    "api",
    "mongodb",
    "mongoose",
    "redis",
    "stripe",
    "openai",
    "production-ready"
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "http-status": "^1.7.0",
    "i18next": "^23.5.1",
    "i18next-fs-backend": "^2.2.0",
    "i18next-http-middleware": "^3.5.0",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.5",
    "openai": "^4.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.3.0",
    "redis": "^4.6.8",
    "stripe": "^13.8.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "@faker-js/faker": "^8.2.0",
    "jest": "^29.6.4",
    "node-mocks-http": "^1.12.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  }
}
